doctype html
// This is a static file
// served from your routes in server.js
head
  meta(charset='utf-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1')
  meta(name='description' content='A cool thing made with Glitch')
  title Welcome to Glitch!
  link#favicon(rel='icon' href='https://docs.oracle.com/favicon.ico' type='image/x-icon')

  // import the webpage's stylesheet
  link(rel='stylesheet' href='/style.css')
  link(rel='stylesheet' href='/custom.css')
  link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css' integrity='sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk' crossorigin='anonymous')
body
  nav.navbar.navbar-expand-sm.navbar-light.bg-light
    button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarNav' aria-controls='navbarNav' aria-expanded='false' aria-label='Toggle navigation')
      span.navbar-toggler-icon
    #navbarNav.collapse.navbar-collapse
      ul.navbar-nav
        li.nav-item
          a.nav-link(href='/users') Users
        li.nav-item
          a.nav-link(href='/transactions') Transactions
        li.nav-item
          a.nav-link(href='/books') Books
  main
    form(method='POST' action='/users/create')
      label
        | User Name
        input(name='name' type='text' maxlength='100' required='' placeholder='User name')
      button(type='submit') Add User
      
    if errors
      each error in errors
        div= error
    section.dreams
      ul
        if users
          each user in users
            li
              div= user.name
              a(href="/users/"+ user.id +"/update") Update
              span | 
              a(href="/users/"+ user.id +"/delete") Delete
